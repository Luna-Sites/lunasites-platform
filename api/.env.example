# Firebase Admin SDK
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Render.com API (get from Render Dashboard -> Account Settings -> API Keys)
RENDER_API_KEY=rnd_xxxxxxxxxxxx
RENDER_OWNER_ID=usr-xxxxxxxxxxxx

# Multi-tenant Worker Service (for custom domains in multi-tenant mode)
# Get the service ID from the Render dashboard URL when viewing the worker service
RENDER_WORKER_SERVICE_ID=srv-xxxxxxxxxxxx
# The public URL of the worker service (e.g., lunacms-worker.onrender.com)
RENDER_WORKER_SERVICE_URL=your-worker.onrender.com

# LunaCMS Repository (for deployments)
LUNACMS_REPO_URL=https://github.com/your-user/lunacms
LUNACMS_REPO_BRANCH=main

# Shared Database URL (from Render PostgreSQL - create one DB for all sites)
SHARED_DATABASE_URL=postgresql://user:password@host:5432/lunacms

# Domain
BASE_DOMAIN=luna-sites.com

# Server
PORT=8000
CORS_ORIGINS=http://localhost:5173,https://lunasites.com
