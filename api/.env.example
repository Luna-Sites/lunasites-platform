# Firebase Admin SDK
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Render.com API (get from Render Dashboard -> Account Settings -> API Keys)
RENDER_API_KEY=rnd_xxxxxxxxxxxx
RENDER_OWNER_ID=usr-xxxxxxxxxxxx

# Multi-tenant Worker Service (for routing, not for domains anymore)
# Get the service ID from the Render dashboard URL when viewing the worker service
RENDER_WORKER_SERVICE_ID=srv-xxxxxxxxxxxx
# The public URL of the worker service (e.g., lunacms-worker.onrender.com)
RENDER_WORKER_SERVICE_URL=your-worker.onrender.com

# Cloudflare for SaaS (Custom Hostnames) - for custom domain SSL
# Get API token from Cloudflare Dashboard -> My Profile -> API Tokens
# Token needs: Zone.Custom Hostnames.Edit, Zone.Zone.Read
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
# Zone ID for your domain (e.g., luna-sites.com)
CLOUDFLARE_ZONE_ID=your-zone-id
# Origin server that Cloudflare will proxy to (your Render worker)
CLOUDFLARE_ORIGIN_SERVER=lunacms-worker.onrender.com
# CNAME target for users (a fallback origin hostname in your zone, e.g., custom.luna-sites.com)
CLOUDFLARE_CNAME_TARGET=custom.luna-sites.com

# LunaCMS Repository (for deployments)
LUNACMS_REPO_URL=https://github.com/your-user/lunacms
LUNACMS_REPO_BRANCH=main

# Shared Database URL (from Render PostgreSQL - create one DB for all sites)
SHARED_DATABASE_URL=postgresql://user:password@host:5432/lunacms

# Domain
BASE_DOMAIN=luna-sites.com

# Server
PORT=8000
CORS_ORIGINS=http://localhost:5173,https://lunasites.com
